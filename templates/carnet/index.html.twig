{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %} 

{% block body %}

    {% if app.request.method == 'POST' %}
    <div>
        {% if carnets | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
           {% else %}
               <h6 class="mt-3">Vos résulats de recherche :</h6>
               {% for carnet in carnets %}
                   <div class="m-3 bg-light border rounded">
                       <a href="{{ path('carnet_show', {'slug': carnet.slug}) }}" style="text-decoration:none">
                              <p class="text-dark"><strong> {{ carnet.categorie }} : </strong>{{ carnet.nom }}</p>
                        </a>
                   </div>
              {% endfor %}
          {% endif %}
     </div>
{% endif %}

{% endblock %}
