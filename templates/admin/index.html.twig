{% extends 'base.html.twig' %}

{% block title %}Administration des carnets d'adresses{% endblock %}

{% block body %} 

    <h3 class="text-center">Gestion des carnets d'adresses</h3>
<button class="btn btn-primary mb-1" style="float:right">
<a href="{{ path('carnet_create') }}" style="text-decoration:none" class="text-light"> Ajouter une personne </a>
</button>
    <table class="table table-hover">
    <thead>
        <tr>
            <th>Nom & Prenom </th>
            <th class="text-center">Telephone </th>
            <th class="text-center">Categorie</th>
            <th class="text-center">Pays</th>
            <th class="text-center">Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody> 
    {% for carnets in carnet %}
        <tr>
            <td>{{carnets.nom}}</td>
            <td class="text-center">
                <spam class="">{{carnets.telephone}}</spam>
            </td>
            <td class="text-center">
                <spam class="">{{carnets.categorie}}</spam>
            </td>
            <td class="text-center">
                <spam class="">{{carnets.pays}}</spam>
            </td>
            <td class="text-center">
                <spam class="">{{carnets.observation}}</spam>
            </td>
            <td>
                <a href="{{ path('admin_edit',{'slug':carnets.slug}) }}" class="btn btn-primary"><i class="fa fa-edit"></i></a>
                <a href="{{ path('admin_delete',{'slug':carnets.slug}) }}" class="btn btn-danger" onclick="return confirm(`Etes vous sur de vouloir suprimer l'adresse de {{carnets.nom}} ?`)"><i class="fa fa-trash"></i></a> 
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<button class="btn btn-danger mt-4" style="float:right">
<a href="{{ path('app_logout') }}" style="text-decoration:none" class="text-light"> Deconnexion </a>
</button>
